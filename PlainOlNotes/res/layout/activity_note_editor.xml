<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
   <LinearLayout
    android:id="@+id/layout0"
    android:layout_width= "fill_parent"
    android:layout_height= "wrap_content"
    >
   <EditText
        android:id="@+id/noteTitle"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:hint="Add Note Title"
        android:ems="10" 
        android:singleLine="false"
        android:gravity="top"
        >
     <requestFocus />
    </EditText>
   </LinearLayout>
   
<LinearLayout
    android:id="@+id/layout1"
    android:layout_below="@id/layout0"
    android:layout_width= "fill_parent"
    android:layout_height= "wrap_content"
    >
   <EditText
        android:id="@+id/noteText"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:hint="Add Note"
        android:ems="10" 
        android:singleLine="false"
        android:gravity="top"
        android:inputType="textMultiLine">
     <requestFocus />
    </EditText>
   </LinearLayout>
   
    <LinearLayout
        android:layout_width= "fill_parent"
    	android:layout_height= "wrap_content" 
    	android:id="@+id/layout2"   
    	android:layout_below="@id/layout1"    
    	android:weightSum="100"
        >
        <TextView
        android:text="Required Time"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="50"
        ></TextView>   
        <EditText 
            android:id="@+id/etRequiredTime"
            android:hint="NUMBER"
            android:layout_width = "fill_parent"
        	android:layout_height = "wrap_content"
        	android:layout_weight="50"
                
            />
      
	</LinearLayout>
	
     <LinearLayout
        android:layout_width= "fill_parent"
    	android:layout_height= "wrap_content" 
    	android:id="@+id/layout3"   
    	android:layout_below="@id/layout2"    
    	android:weightSum="100"
        >
       
        
        <TextView
       
        android:text="Start Date"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="25"
        ></TextView>  
        
          <EditText
        android:id="@+id/etStartMonth"
        android:hint="MM"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="25"
        ></EditText>  
          
          <EditText
        android:id="@+id/etStartDay"
        android:hint="DD"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="25"
        ></EditText>  
        
           <EditText
        android:id="@+id/etStartYear"
        android:hint="YYYY"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="25"
        ></EditText>
            
    
	</LinearLayout>
	
       <LinearLayout
        android:layout_width= "fill_parent"
    	android:layout_height= "wrap_content" 
    	android:id="@+id/layout4" 
    	android:layout_below="@id/layout3"    
    	android:weightSum="100"
        >
       <TextView 
         android:text="End Date"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="25"
       ></TextView>
       
          <EditText
        android:id="@+id/etEndMonth"
        android:hint="MM"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="25"
        ></EditText>  
        
        <EditText
        android:id="@+id/etEndDate"
        android:hint="DD"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="25"
        ></EditText> 
     
     <EditText
        android:id="@+id/tvEndYear"
        android:hint="YYYY"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="25"
        ></EditText>       
	</LinearLayout>
	
       <LinearLayout
        android:layout_width= "fill_parent"
    	android:layout_height= "wrap_content" 
    	android:id="@+id/layout5"   
    	android:layout_below="@id/layout4"    
    	android:weightSum="100"
        >
        <TextView
        android:id="@+id/tvPriority"
        android:text="Priority"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="50"
        
        ></TextView>   
        
        <EditText
        android:id="@+id/etPriority"
        android:hint="NUMBER"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="50"
        ></EditText>  
           
	</LinearLayout>
	

    <LinearLayout
        android:layout_width= "fill_parent"
    	android:layout_height= "wrap_content" 
    	android:id="@+id/layout6"   
    	android:layout_below="@id/layout5"    
    	android:weightSum="100"
        >
        <Button 
        android:id="@+id/bSave"
        android:text="Save"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="50"
        
        ></Button>    
        <Button 
        android:id="@+id/bCancel"
        android:text="Cancel"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="50"
       
        ></Button>  
	</LinearLayout>
	
 
	<LinearLayout
        android:layout_width= "fill_parent"
    	android:layout_height= "wrap_content" 
    	android:id="@+id/layout7"   
    	android:layout_below="@id/layout6"    
    	android:weightSum="100"
        >
        <TextView
        android:id="@+id/etSome"
        android:hint="Sample Text for Test"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_weight="50"
        
        ></TextView>         
	</LinearLayout>
</RelativeLayout>